{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "jsx": "react",
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": ".",
    "strict": true,
    "paths": {
      "components/*": [
        "src/components/*"
      ]
    },
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "./node_modules/"
  ]
}